with "build_common";

project Build_Charon is

   for Languages use ("C");
   for Source_Dirs use ("src/**");
   for Main use ("charon-tkm");
   for Object_Dir use Build_Common.Obj_Dir;

   package Compiler is
      for Default_Switches ("c") use Build_Common.C_Compiler_Switches
        & "-Werror";
   end Compiler;

end Build_Charon;
